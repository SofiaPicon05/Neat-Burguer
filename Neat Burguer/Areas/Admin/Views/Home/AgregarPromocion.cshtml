@model Neat_Burguer.Areas.Admin.Models.ViewModels.AgregarPromocionViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "LayoutAdmi";
}

<form action="~/admin/promocion/agregar" method="post">
    <h1>Agregar un descuento de promoción</h1>
    <input asp-for="IdMenu" hidden />
    <span>
        <label for="nombre">Nombre:</label>
        <input asp-for="Nombre" type="text" id="nombre" required>
    </span>
    <span>
        <label for="precio">Precio real:</label>
        <input asp-for="PrecioOriginal" type="text" id="precio" required>
    </span>
    <span>
        <label for="promocion">Precio promoción:</label>
        <input asp-for="PrecioNuevo" type="text" id="promocion" required>
    </span>
    <span class="error">@Html.ValidationSummary(true)</span>

    <div class="botones">
        <input type="submit" value="Agregar" />
        <a asp-area="admin" asp-controller="home" asp-action="menu">
            <input type="button" value="Cancelar" />
        </a>
    </div>
</form>